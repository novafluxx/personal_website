@page "/aviation"

<PageTitle>Justin High - Aviation</PageTitle>

<div class="hero-section hero-section--aviation">
    <div class="aviation-background"></div>
    <div class="hero-content">
        <h1>Aviation Journey</h1>
        <h2 class="hero-subtitle">Licensed Private Pilot</h2>
    </div>
</div>

<div class="aviation-content">
    <div class="section">
        <h2>My Flying Experience</h2>
        <div class="experience-card">
            <div class="card-icon">
                <i class="fas fa-plane"></i>
            </div>
            <div class="card-content">
                <h3>Private Pilot License</h3>
                <p>Achieved the dream of becoming a licensed private pilot, opening up new horizons and perspectives.</p>
            </div>
        </div>
    </div>

    <div class="section">
        <h2>Aviation Skills</h2>
        <div class="skills-grid">
            <div class="skill-card">
                <i class="fas fa-compass"></i>
                <h3>Navigation</h3>
                <p>Proficient in VFR navigation and flight planning</p>
            </div>
            <div class="skill-card">
                <i class="fas fa-cloud"></i>
                <h3>Weather</h3>
                <p>Experienced in weather analysis and decision making</p>
            </div>
            <div class="skill-card">
                <i class="fas fa-tower-broadcast"></i>
                <h3>Communications</h3>
                <p>Fluent in aviation radio communications</p>
            </div>
        </div>
    </div>
</div>
